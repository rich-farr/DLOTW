  <div>
     <input class="location-input" type="text" name="name" id="city_name" size='40'/>
  </div>
  <div>
    <input class="submit-btn" type="submit" name="#" value="Check The Weather" id="button" />
  </div>
</form>


  <!-- <div class="result-div"> -->
    <h3 class="result-title">{{this.name}} forecast: </h3>
    <p class="result-text">The City of {{this.name}} has a high temperature of {{this.main.temp}} with a {{this.description}}. Wind speeds are at {{this.speed}}. </p>
